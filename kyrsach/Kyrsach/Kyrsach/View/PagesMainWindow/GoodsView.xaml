                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button MinHeight="100" MinWidth="100" BorderThickness="3" BorderBrush="Black" Margin="10" Background="White">
                        <Button.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="0.2*"/>
                                </Grid.RowDefinitions>
                                <Image VerticalAlignment="Top" Grid.Row="0" Source="C:\Users\mi\Desktop\1\OOP\kyrsach\Kyrsach\Kyrsach\images\ProductCatalogGoods.jpg"/>
                                <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="СПАЛНИ"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource ButtonCatalog}" Grid.Column="1">
                        <Button.Content>
                            <StackPanel>
                                <Image VerticalAlignment="Top" Source="C:\Users\mi\Desktop\1\OOP\kyrsach\Kyrsach\Kyrsach\images\ProductCatalogGoods.jpg"/>
                                <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="МЕБЕЛЬ ДЛЯ ГОСТИННОЙ И СТОЛОВОЙ"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
